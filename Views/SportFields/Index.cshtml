@model IEnumerable<SportsReservationApp.Models.SportField>

@{
    ViewData["Title"] = "Terenuri Sportive";
}

<h1>Terenuri Sportive</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adauga Teren Nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.IsIndoor)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Type)</td>
            <td>
                @(item.IsIndoor ? "Indoor" : "Outdoor")
            </td>
            <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalii</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
